# ============================================
# Supabase 配置（必需）
# ============================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-key

# ============================================
# JWT 密钥（必需）
# ============================================
SECRET_KEY=your-secret-key-here

# ============================================
# AI 提供商配置（二选一）
# ============================================

# 选项1: 美团 LongCat（推荐国内使用）
AI_PROVIDER=longcat
LONGCAT_API_KEY=your-longcat-api-key
LONGCAT_SECRET_KEY=your-longcat-secret-key  # 如果需要
LONGCAT_BASE_URL=https://api.ai.meituan.com/v1
LONGCAT_MODEL=longcat-chat-7b

# 选项2: OpenAI（推荐海外使用）
# AI_PROVIDER=openai
# OPENAI_API_KEY=sk-your-openai-key
# OPENAI_BASE_URL=https://api.openai.com/v1
# AI_MODEL=gpt-4o-mini

# ============================================
# Embedding 配置（本地部署）
# ============================================
# 使用本地模型（无需 API Key，首次启动自动下载）
EMBEDDING_MODE=local
EMBEDDING_MODEL_NAME=BAAI/bge-large-zh-v1.5
EMBEDDING_DIMENSION=1024

# 备选：使用 API（如 SiliconFlow）
# EMBEDDING_MODE=api
# EMBEDDING_BASE_URL=https://api.siliconflow.cn/v1
# EMBEDDING_API_KEY=sk-your-key
# EMBEDDING_MODEL_NAME=BAAI/bge-large-zh-v1.5
# EMBEDDING_DIMENSION=1024

# ============================================
# 其他配置（可选）
# ============================================
# 日志级别
LOG_LEVEL=INFO

# 是否启用 AI 功能模拟模式（无 API Key 时使用）
AI_MOCK_MODE=false
